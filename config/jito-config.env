# Jito-Solana Configuration
# These are the official Jito testnet endpoints and program IDs
# Generally you should not need to modify these values

# ============================================================================
# Jito Version
# ============================================================================

# Jito-Solana version to build and run
JITO_VERSION=v1.16.17-jito

# ============================================================================
# Solana Cluster Configuration
# ============================================================================

# Cluster to connect to (testnet, mainnet-beta, devnet)
SOLANA_CLUSTER=testnet

# Solana RPC URL
SOLANA_RPC_URL=https://api.testnet.solana.com

# Expected genesis hash for testnet
EXPECTED_GENESIS_HASH=4uhcVJyU9pJkvQyS88uRDiswHXSCkY3zQawwpjk2NsNY

# Testnet entrypoint
ENTRYPOINT=entrypoint.testnet.solana.com:8001

# ============================================================================
# Jito Infrastructure Endpoints (Testnet)
# ============================================================================

# Jito Block Engine URL
# The block engine coordinates MEV bundle auctions and block construction
BLOCK_ENGINE_URL=https://ny.testnet.block-engine.jito.wtf

# Jito Relayer URL
# The relayer forwards bundles from searchers to the block engine
RELAYER_URL=nyc.testnet.relayer.jito.wtf:8100

# Shred Receiver Address
# Receives transaction shreds for bundle processing
SHRED_RECEIVER_ADDR=141.98.216.97:1002

# ============================================================================
# Jito Program IDs (Testnet)
# ============================================================================

# Tip Payment Program
# Handles tip distribution to validators
TIP_PAYMENT_PROGRAM=GJHtFqM9agxPmkeKjHny6qiRKrXZALvvFGiKf11QE7hy

# Tip Distribution Program
# Manages how tips are distributed among stakeholders
TIP_DISTRIBUTION_PROGRAM=F2Zu7QZiTYUhPd7u9ukRVwxh7B71oA3NMJcHuCHc29P2

# Merkle Root Upload Authority
# Authority for uploading merkle roots for tip distribution
MERKLE_ROOT_AUTHORITY=GZctHpWXmsZC1YHACTGGcHhYxjdRqQvTpYkb9LMvxDib

# ============================================================================
# Validator Configuration
# ============================================================================

# Paths on the remote validator VM
LEDGER_PATH=/mnt/ledger
ACCOUNTS_PATH=/mnt/accounts
LOG_PATH=/home/sol/jito-validator.log

# Validator ports
RPC_PORT=8899
DYNAMIC_PORT_RANGE_START=8000
DYNAMIC_PORT_RANGE_END=8020

# ============================================================================
# Build Configuration
# ============================================================================

# Jito-Solana repository URL
JITO_REPO=https://github.com/jito-foundation/jito-solana.git

# Build options
# Set to "true" to build validator-only (faster, recommended for testnet)
BUILD_VALIDATOR_ONLY=true

# ============================================================================
# Account Funding
# ============================================================================

# Minimum SOL balance required for validator identity
MIN_VALIDATOR_BALANCE=5.0

# Minimum SOL balance required for vote account
MIN_VOTE_ACCOUNT_BALANCE=1.0

# Web faucet URLs (fallback if airdrop is rate limited)
FAUCET_URL_1=https://faucet.solana.com
FAUCET_URL_2=https://faucet.quicknode.com/solana/testnet

# ============================================================================
# Monitoring & Alerts
# ============================================================================

# How often to check validator health (in seconds)
HEALTH_CHECK_INTERVAL=300

# Alert if skip rate exceeds this threshold (percentage)
SKIP_RATE_ALERT_THRESHOLD=20

# Alert if disk usage exceeds this threshold (percentage)
DISK_USAGE_ALERT_THRESHOLD=80

# ============================================================================
# Advanced Validator Options
# ============================================================================

# Enable vote account management
ENABLE_VOTING=true

# Commission rate for vote account (0-100)
# Note: This can be set when creating vote account, default is 100 (100%)
COMMISSION_RATE=100

# Additional validator flags (space-separated)
# Example: "--no-incremental-snapshots --limit-ledger-size 50000000"
ADDITIONAL_VALIDATOR_FLAGS=

# ============================================================================
# Mainnet Configuration (Reference Only - NOT FOR TESTNET)
# ============================================================================
#
# If deploying to mainnet in the future, use these values instead:
