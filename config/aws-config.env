# AWS Configuration for Jito Validator Deployment
# Edit these values as needed for your deployment

# ============================================================================
# AWS Region & Availability
# ============================================================================

# AWS region to deploy in
AWS_REGION=us-east-1

# ============================================================================
# EC2 Instance Configuration
# ============================================================================

# Instance type
# Options:
#   - m7i.4xlarge  (16 vCPU, 64GB RAM) - $0.81/hr - Recommended for testnet
#   - m7i.2xlarge  (8 vCPU, 32GB RAM)  - $0.40/hr - Minimum for testnet
#   - m7i-flex.4xlarge (16 vCPU, 64GB) - $0.65/hr - Good budget option
AWS_INSTANCE_TYPE=m7i.4xlarge

# Instance name tag
AWS_INSTANCE_NAME=jito-testnet-validator

# SSH user (default for Ubuntu)
SSH_USER=ubuntu

# ============================================================================
# Storage Configuration
# ============================================================================

# EBS volume size in GB (minimum 2TB recommended for validator)
AWS_VOLUME_SIZE=2048

# EBS volume type (gp3 recommended for best price/performance)
AWS_VOLUME_TYPE=gp3

# IOPS for gp3 volumes (3000-16000)
AWS_VOLUME_IOPS=16000

# Throughput for gp3 volumes in MB/s (125-1000)
AWS_VOLUME_THROUGHPUT=1000

# ============================================================================
# Network Configuration
# ============================================================================

# VPC ID (will use first available VPC if not specified)
# Use: aws ec2 describe-vpcs --query 'Vpcs[0].VpcId' --output text
AWS_VPC_ID=vpc-06b3db4e840720768

# SSH Key pair name (will be created if doesn't exist)
AWS_KEY_NAME=jito-validator-key

# Security group name (will be created if doesn't exist)
AWS_SECURITY_GROUP_NAME=jito-validator-sg

# Restrict SSH access to your IP (leave empty to auto-detect)
# Format: x.x.x.x
# Leave empty or set to "auto" to detect automatically
ADMIN_IP=auto

# ============================================================================
# Auto-Stop Configuration
# ============================================================================

# Automatically stop instance after X hours to save costs
# Set to 0 to disable auto-stop
# Useful for testnet testing - prevents leaving instance running
AUTO_STOP_HOURS=8

# Cost alert threshold in USD
# Script will warn when estimated costs exceed this amount
COST_ALERT_THRESHOLD=100

# ============================================================================
# Advanced Options
# ============================================================================

# AMI ID (leave empty to auto-detect latest Ubuntu 22.04)
# Only set this if you want to use a specific AMI
AWS_AMI_ID=

# Enable detailed CloudWatch monitoring (incurs additional charges)
ENABLE_DETAILED_MONITORING=false

# Create Elastic IP for persistent public IP (recommended for long-term validators)
# Note: Elastic IPs are free when attached to running instances
USE_ELASTIC_IP=false
